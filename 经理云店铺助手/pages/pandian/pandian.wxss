/* pages/shopCar/shopCar.wxss */

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.list{
  height: 115px;
  width:120%;
  background-color: #eee; 
  position: relative;
  transition: all .3s;
  margin: 10px 0px;
}

.showMsg{
  height: 100%;
  float: left;
}
.deleBtn{
  height: 115px;
  line-height: 115px;
  text-align: center;
  color:white;
  background-color: red;
  float: left;
}
.choseImg{
  width: 40px;
  height: 115px;
  display: inline-block;
  text-align: center;
  line-height: 115px;
  vertical-align: top;
}
.choseImg image{
  width: 20px;
  height: 20px;
}
.goodsImg{
  width:120px;
  height: 115px;
  display: inline-block;
}
.goodsImg image{
  width:100%;
  height: 100%;
}
.MsgAndNum{
  display: inline-block;
  height: 115px;
  box-sizing: border-box;
  padding:8px 5px 0px 5px;
  vertical-align: top;
}
.showMsgs{
  height: 60px;
  width: 100%;
  line-height: 20px;
  margin: 0px 10px;
  font-size: 17px;
}
.kucun{
  /* float: left; */
  height: 18px;
  width: 35%;
  font-size: 16px;
  margin: 0px 10px;
}
.numbers{
  /* float: right; */
  height: 18px;
  width: 35%;
  font-size: 16px;
  margin: 0px 10px;
  color: red;
}
.num{
  height: 27px;
  width:100%;
}
.jian,.shu,.jia{
  width:33.333%;
  height: 100%; 
  overflow: hidden;
  text-align: center;
  line-height: 27px;
  font-size: 16px;
  display: inline-block;
  position: relative;
  box-sizing: border-box;
}
.jian view{
  width: 20px;
  height: 3px;
  background-color: #aaa;
  margin: 13px auto;

}
.shu_num{
  display: block;   
  width:100%;
  height:100%;
  line-height: 27px; 
  text-align: center; 
}
.jia view:nth-child(1){
  width: 20px;
  height: 3px;
  background-color: #aaa;
  margin: 13px auto;
}
.jia view:nth-child(2){
  width: 3px;
  height: 20px;
  background-color: #aaa;
  position: absolute;
  top:5px;
  left: 50%;
  transform: translateX(-1.5px);
}
.remark{
  width:96%;
  height: 30px;
  border:1px solid #ccc;
  border-radius: 5px;
  border-top-right-radius: 0px;
  border-bottom-right-radius: 0px;
  padding-left:10px;
  font-size: 14px;
}
.foot{
  height: 60px;
  background-color:white; 
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  border: 1px solid #aaa;
}
.img{
  width: 10%;
  height: 100%;
  float: left;
}
.img image{
  width: 20px;
  height: 20px;
  display: block;
  margin: 20px;
}
.checked_all{
   float: left; 
  height: 100%;
  width: 12%;
  line-height: 60px;
  font-size: 14px;
  margin-left: 10px;
}
.heji{
  float: left;
  width: 40%;
  margin-left: 45px;
  line-height: 60px;
}
.save{
  position: absolute;
  right: 0px;
  height: 60px;
  bottom: 0px;
  background-color:orange;
  width: 48%;
  text-align: center;
  line-height: 60px; 
  font-size: 16px;
  color:white;
}
.sumbit{
  position: absolute;
  left: 0px;
  height: 60px;
  bottom: 0px;
  background-color:orange;
  width: 48%;
  text-align: center;
  line-height: 60px; 
  font-size: 16px;
  color:white;
}
.content{
  overflow: hidden;
}
.list:nth-child(1){
  margin-top:0px;
}
.list:last-Child{
  border:1px solid red;
}
.pandian_remark{
  margin-bottom:70px; 
}
.selected{
  border: 1px solid red;
}