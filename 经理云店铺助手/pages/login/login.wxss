/* pages/login/login.wxss */

.title image{
  width: 160px;
  height:83px;
  margin:0 auto;
  display: block;
  
}
.title text{
  text-align: center;
  display: block;
  height: 60px;
  line-height: 60px;
  color:#fff;
}
page{
  height: 100%;
  box-sizing: border-box;
}
.content{
  padding: 40px 30px;
  height: 100%;
  box-sizing: border-box;
  width: 100%;
  position: relative;
  z-index: 2;
}
.section{
  box-sizing: border-box;
  width: 100%;
  position: relative;
  padding-left: 60px;
}
.name,.passWord{
  width:100%;
  height: 50px;
  margin: 30px 0px;
  border:1px solid #fff;
  box-sizing: border-box;
  border-radius: 6px;
  padding-left: 20px;
  font-size: 18px;
}
.icon{
  width:30px;
  height:30px;
  position: absolute;
  top:5px;
  left: 10px;
}
.inputs{
  margin-top:20px;
}
.label{
  position: absolute;
  left: 0px;
  top:0px;
  height: 100%;
  line-height: 50px;
  color:#fff;
}
.smallText{ 
  font-size: 16px;
  color:#fff;
  text-align: right;
  display: block;
}
.log{
  margin-top: 20px;
  color:#37abc1;
  background-color:#fff;
  font-size:20px;
  height: 50px;
}
/* 选择店铺样式 */
.sales_content{
  height: 5px;
  width: 100%; 
  box-shadow: 0px 4px 5px #ccc inset;
}
.section{
  width: 100%;
  margin: 20px 0px;
}
.button{
  border-top: 1px solid gainsboro;
  margin-top: 50px
}
.choose_products{
  height: 120px;
  width: 33.3333%;
  border: 1px #ccc solid;
  float: left;
  margin:0px -1px;
}
.choose_products image{
  height: 100px;
  width: 100px;
  margin:10px auto;
  display: block;
}
.empty{
  height: 40px;
  width: 90px;
  background-color: grey;
  margin: 20px 0px 0px 30px;
  color: #fff
}
.sales{
  height: 40px;
  width: 90px;
  background-color: grey;
  margin: 20px 30px 0px 0px;
  color: #fff
}
.section__title{
  margin: 30px auto;
}
.choseMsg{
  font-size:18px;
  color:#aaa;
}
.picker{
  font-size:18px;
  color:#1e9fff;
}
.sure_store{
  height:40px;
  width: 70%;
  border-radius: 5px; 
}
.scan{
  height: 40px;
  line-height: 40px;
  width: 70%;
  color: #ffffff;
  background-color: #1AAD19;
  margin: 20px auto;
}
.bgImg {
  width:100%;
  height: 100%;
  position: absolute;
  left:0px;
  top:0px;
  z-index: 1;
}
picker-view-column{
  text-align: center;
  font-size:18px;
}